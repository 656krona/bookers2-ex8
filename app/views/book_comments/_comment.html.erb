<% book.book_comments.each do |book_comment| %>
  <table class="table comment">
    <tr id="book_comment_<%= book_comment.id %>">
      <td>
      <span><%= book_comment.comment %></span><br>
      </td>
      <td>
      <span><%= book_comment.user.name %></span>
      <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
      </td>
      <td>
      <span><%if book_comment.user == current_user %>
      <%= link_to "Destroy",book_book_comment_path(book_comment.book_id, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger delete pull-right" %></span>
      <% end %>
      </td>
    </tr>
  </table>
<% end %>